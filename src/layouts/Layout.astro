---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Branca Fútbol - Club de Fútbol" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-club-dark text-white">
    <nav class="fixed top-0 left-0 right-0 z-50 bg-club-dark/90">
      <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="flex items-center gap-3">
          <img src="/images/logo.png" alt="Branca Fútbol" class="w-10 h-10" />
          <span class="text-xl font-bold">Branca Fútbol</span>
        </a>
        <div class="flex items-center gap-6">
          <a 
            href="#equipo" 
            class="text-white hover:text-club-green transition-colors duration-200"
          >
            Equipo
          </a>
          <a 
            href="#videos" 
            class="text-white hover:text-club-green transition-colors duration-200"
          >
            Videos
          </a>
          <a 
            href="#contacto" 
            class="text-white bg-club-green hover:bg-club-green-light hover:-translate-y-0.5 transition-all duration-200 px-6 py-2 rounded-lg shadow-lg"
          >
            Contacto
          </a>
        </div>
      </div>
    </nav>

    <main class="min-h-screen">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --club-dark: #121212;
    --club-green: #1a5f3f;
    --club-green-light: #2a8f5f;
  }
  
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: system-ui, sans-serif;
    background: var(--club-dark);
  }
  
  .neu-shadow {
    box-shadow: 
      inset 0 0 15px rgba(255, 255, 255, 0.05),
      0 5px 15px rgba(0, 0, 0, 0.3);
  }

  .glassmorphic {
    background: rgba(26, 95, 63, 0.2);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.125);
  }
</style>
